@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit role";
}

<h1>Edit role</h1>

<form method="POST" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="LoadAllRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (string username in Model.Users)
                {
                    <h5 class="card-title">@username</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Admin" asp-action="ChangeUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">
            Add or remove users
            </a>
        </div>
    </div>
</form>

<div class="mt-3"><a asp-action="LoadAllRoles">Back to List</a></div>