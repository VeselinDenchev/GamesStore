@model IEnumerable<GameViewModel>
@inject SignInManager<User> signInManager;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


@if (signInManager.IsSignedIn(User) && User.IsInRole(Role.ADMIN_ROLE))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Developer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgeRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearOfRelease)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAtUtc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedAtUtc)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Platform)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImgUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Developer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgeRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearOfRelease)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAtUtc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedAtUtc)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    foreach (var game in Model)
    {
        <div class="card">
            <div class="card-body">
                <img src="@game.ImgUrl" width="350" height="375" />
            </div>
            <div class="card-footer">
                <span>@game.Name</span>
                <spam>@game.Price</spam>
                <a class="btn btn-primary" asp-controller="Cart" asp-action="Buy" asp-route-id="@game.Id">Add to cart</a>
                <a class="btn btn" asp-controller="Game" asp-action="Details" asp-route-id="@game.Id">Details</a>
            </div>
        </div>
    }

}

